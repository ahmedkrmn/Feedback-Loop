<html lang="en">
  <head>
    <title>Dashboard</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
  </head>
  <body>
    <nav class="light-blue lighten-1" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="/" class="brand-logo left"
          >You currently have <%= credits %> Credits</a
        >
        <ul class="right">
          <li>
            <form action="/checkout" method="POST">
              <script
                src="https://checkout.stripe.com/checkout.js"
                class="stripe-button"
                data-key="pk_test_gITSyPLbjNIx9pZANGDpPybK00XHcXTkvG"
                data-amount="499"
                data-currency="USD"
                data-name="Feedback Loop"
                data-description="Purchase 5 Credits"
                data-zip-code="true"
                data-image="https://cdn3.iconfinder.com/data/icons/business-outline-1/64/business-outline-07-512.png"
                data-locale="auto"
              ></script>

              <!-- Hide default stripe button -->
              <script>
                document.getElementsByClassName(
                  'stripe-button-el'
                )[0].style.display = 'none';
              </script>

              <!-- Add custom submit button -->
              <li>
                <button type="submit" class="btn red">Buy 5 Credits</button>
              </li>
            </form>
          </li>
          <li style="margin-left: 10px"><a href="/logout">Sign Out</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <% userSurveys.forEach(survey => { %>
      <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Survey Name: <%= survey.title %></span>
              <div class="col s6"><p>Subject: <%= survey.subject %></p></div>
              <div class="col s6"><p>Body: <%= survey.body %></p></div>
              <p>Date sent: <%= survey.dateSent %></p>
              <p>Last response: <%= survey.lastResponded %></p>
            </div>
            <div class="card-action">
              <a href="#">Yes votes: <%= survey.yes %></a>
              <a href="#">No votes: <%= survey.no %></a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <div class="fixed-action-btn">
      <a class="btn-floating btn-large red">
        <i class="large material-icons" onclick="location.href='/survey/new'"
          >mode_edit</i
        >
      </a>
    </div>
  </body>
</html>
